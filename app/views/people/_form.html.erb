<%= simple_form_for @person do |f| %>
  <%= f.collection_select(:document_id, Document.all, :id, :tipo_documento) %>
  <%= f.input :identificacion %>
  <%= f.input :primer_nombre %>
  <%= f.input :segundo_nombre %>
  <%= f.input :primer_apellido %>
  <%= f.input :segundo_apellido %>
  <%= f.collection_select(:role_id, Role.all, :id, :nombre_rol) %>
  <%= f.button :submit %>
<% end %>
